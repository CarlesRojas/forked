{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": false,
        "outDir": ".",
        "rootDir": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
