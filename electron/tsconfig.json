{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": ".",
        "rootDir": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
